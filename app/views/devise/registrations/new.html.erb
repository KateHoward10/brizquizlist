<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
    document.addEventListener("turbolinks:load", function(){
      passwordFeedback()
    });
  </script>
<% end %>

<% content_for :title, "Sign up" %>

<div class="form-container">
  <h2>Sign up</h2>
  <p>Create an account in order to save your favourite quizzes.</p>
  <p>If you would like to add your own quiz, sign up with an email where users can contact you.</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class="field">
      <div class="row-label">
        <%= f.label :password do %>
          Password
          <div class="confirm-icon">
            <%= fa_icon "check-circle", class: "green" %>
          </div>
        <% end %>
        <% if @minimum_password_length %>
          <small>Minimum <%= @minimum_password_length %> characters</small>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <div class="strength-indicator"></div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation do %>
        Confirm password
        <div class="confirm-icon">
          <%= fa_icon "check-circle", class: "green" %>
        </div>
      <% end %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <div class="strength-indicator"></div>
    </div>

    <%= f.submit "Sign up" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
