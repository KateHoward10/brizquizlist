<li class="favourite-entry">
  <%= link_to favourite, class: "quiz-link" do %>
    <div class="icon-container" style="background-color: hsl(<%= favourite.hue %>, 50%, 50%)"><%= fa_icon "heart", class: "fa-lg home" %></div>
    <div class="quiz-overview">
      <span><%= favourite.venue %></span>
      <span class="quiz-time"><%= favourite.day.slice(0,3) %><%= favourite.time ? ", #{favourite.time}" : "" %></span>
    </div>
  <% end %>
  <%= link_to toggle_favorite_quiz_path(favourite), remote: true, method: :post, class: "unfavourite_button", data: { confirm: "Are you sure you want to unfavourite this quiz?" } do %>
    <div class="toggle-container" title="Unfavourite">
      <%= fa_icon "trash" %>
    </div>
  <% end %>
</li>