<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      removeFavourite()
    });
  </script>
<% end %>

<main>
  <h2>Favourites</h2>
  <ul>
    <% if @favourites.any? %>
      <% @favourites.each do |f| %>
        <%= render 'favourite', favourite: f %>
      <% end %>
    <% else %>
      <p>You have no favourites yet.</p>
      <p>To add some, click on the heart on individual quiz pages.</p>
    <% end %>
  </ul>
</main>
