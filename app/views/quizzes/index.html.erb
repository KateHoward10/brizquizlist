<%= render 'header', active: "home" %>
<main>
  <%= search_form_for @search do |f| %>
    <%= f.search_field :venue_cont %>
    <%= button_tag do %>
      <i class="fas fa-search"></i>
    <% end %>
    <%= link_to "Reset", quizzes_path %>
  <% end %>
  <%= search_form_for @search do |f| %>
    <%= f.select :day_cont, ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] %>
    <%= f.submit %>
    <%= link_to "Reset", quizzes_path %>
  <% end %>
  <ul class="picture-grid">
    <% @quizzes.shuffle.each do |quiz| %>
      <%= link_to quiz do %>
        <%= render 'quiz', quiz: quiz %>
      <% end %>
    <% end %>
  </ul>
</main>
