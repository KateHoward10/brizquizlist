<nav>
  <%= link_to quizzes_path, title: "Home" do %>
    <h2 ><%= fa_icon "home", class: "fa-lg", id: "home-icon" %><span class="nav-link">Briz Quiz List</span></h2>
  <% end %>
  <%= link_to "/about", title: "About" do %>
    <h3 style="<%= current_page?("/about") ? "color: deepskyblue" : "" %>"><%= fa_icon "info-circle", class: "fa-lg" %><span class="nav-link">About</span></h3>
  <% end %>
  <%= link_to "/map", title: "Map" do %>
    <h3 style="<%= current_page?("/map") ? "color: deepskyblue" : "" %>"><%= fa_icon "map", class: "fa-lg" %><span class="nav-link">Map</span></h3>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to favourites_path, title: "Faves" do %>
      <h3 style="<%= current_page?("/faves") ? "color: deepskyblue" : "" %>"><%= fa_icon "heart", class: "fa-lg" %><span class="nav-link">Faves</span></h3>
    <% end %>
  <% end %>
  <div id="hover-area">
    <h3><%= fa_icon "user", class: "fa-lg" %><span class="nav-link">Account</span></h3>
    <div id="user-menu">
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Log in", new_user_session_path %>
        <%= link_to "Sign up", new_user_registration_path %>
      <% end %>
    </div>
  </div>
</nav>