<nav>
  <div class="nav-inner">
    <%= link_to quizzes_path, title: "Home" do %>
      <div class="link-lg"><%= fa_icon "home", class: "fa-lg", id: "home-icon" %><span class="nav-link">Briz Quiz List</span></div>
    <% end %>
    <%= link_to "/map", title: "Map" do %>
      <div style="<%= current_page?("/map") ? "color: deepskyblue" : "" %>"><%= fa_icon "map", class: "fa-lg" %><span class="nav-link">Map</span></div>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to calendar_path, title: "Calendar" do %>
        <div style="<%= current_page?("/calendar") ? "color: deepskyblue" : "" %>"><%= fa_icon "calendar-check-o", class: "fa-lg" %><span class="nav-link">Calendar</span></div>
      <% end %>
      <%= link_to favourites_path, title: "Faves" do %>
        <div style="<%= current_page?("/favourites") ? "color: deepskyblue" : "" %>"><%= fa_icon "heart", class: "fa-lg" %><span class="nav-link">Faves</span></div>
      <% end %>
    <% end %>
    <div class="account-container">
      <div class="account-link">
        <% if user_signed_in? %>
          <%= avatar_for(current_user) %>
        <% else %>
          <%= fa_icon "user-circle", class: "fa-lg" %>
        <% end %>
        <%= fa_icon "chevron-down", class: "fa-sm" %>
      </div>
      <div class="account-menu">
        <div class="account-menu-marker"></div>
        <div class="account-menu-list">
          <% if user_signed_in? %>
            <%= link_to edit_user_registration_path do %>
              <div class="icon-link"><%= fa_icon "user" %> <%= truncate(current_user.username || current_user.email, length: 25) %></div>
            <% end %>
            <%= link_to my_quizzes_path do %>
              <div class="icon-link"><%= fa_icon "home" %> My Quizzes</div>
            <% end %>
            <%= link_to new_quiz_path do %>
              <div class="icon-link"><%= fa_icon "plus" %> New quiz</div>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <div class="icon-link"><%= fa_icon "sign-out" %> Log out</div>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path do %>
              <div class="icon-link"><%= fa_icon "sign-in" %> Log in</div>
            <% end %>
            <%= link_to new_user_registration_path do %>
              <div class="icon-link"><%= fa_icon "user-plus" %> Sign up</div>
            <% end %>
          <% end %>
        </div>
      </div>
      </div>
  </div>
</nav>
